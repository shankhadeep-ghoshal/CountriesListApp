<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:id="@+id/MainActSwipeRefreshLayout">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context=".ui.MainActivity"
        android:baselineAligned="false">

        <fragment
            android:id="@+id/fragment2"
            android:name="shankhadeepghoshal.org.countrieslistapp.ui.countrieslist.CountriesListFrag"
            android:tag="@string/TAG_LIST_FRAGMENT"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            tools:layout="@layout/fragment_countries_list" />

        <fragment
            android:id="@+id/fragment3"
            android:name="shankhadeepghoshal.org.countrieslistapp.ui.countrydetail.CountryDetailsFrag"
            android:tag="@string/TAG_DETAILS_FRAGMENT"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:layout="@layout/fragment_country_details" />
    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>